rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Games collection
    match /games/{gameId} {
      // Allow read access to all authenticated users
      allow read: if true;
      
      // Teams subcollection
      match /teams/{teamId} {
        allow read: if true;
      }
    }
    
    // Default: deny all access to other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
